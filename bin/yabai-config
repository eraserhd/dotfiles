#!/bin/sh

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

yabai -m config window_shadow                off
yabai -m config window_border                on
yabai -m config active_window_border_color   0xff8c6cff

yabai-update-spaces
yabai -m signal --add event=display_added action=yabai-update-spaces
yabai -m signal --add event=display_removed action=yabai-update-spaces

# (1) Coding
yabai -m rule --add label=kitty app=kitty space=^code

# (2) Laptop window
yabai -m rule --add label=Music app=Music space=browse
yabai -m rule --add label=Spotify app=Spotify space=browse
yabai -m rule --add label=Anki app=Anki space=browse
yabai -m rule --add label=Books app=Books space=browse
yabai -m rule --add label=Messages app=Messages space=browse
yabai -m rule --add label=Discord app=Discord space=browse

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  2
yabai -m config bottom_padding               55
yabai -m config left_padding                 2
yabai -m config right_padding                2
yabai -m config window_gap                   2

# Things not to manage
yabai -m rule --add label=preferences app='System Preferences' manage=off

echo "yabai configuration loaded.."
