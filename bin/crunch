#!/usr/bin/env bash

hostname=crunch.eraserhead.net
while (( $# > 0 )); do
    case "$1" in
        -l|--local) hostname=10.0.0.2;;
    esac
    shift
done

exec ssh -t "$hostname" /bin/sh -c "'
  set -e
  ln_cmd=\"mkdir -p \\\$(dirname \\\$SSH_AUTH_SOCK) ; ln -sf \$SSH_AUTH_SOCK \\\$SSH_AUTH_SOCK\"
  tmux run-shell \"\$ln_cmd\"
  tmux attach
'"
